<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="20"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:padding="20dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:src="@drawable/hanyang">
            </ImageView>
        </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="ID"
                android:layout_weight="2"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:textColor="#cccccc">
            </EditText>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="PASSWORD"
                android:layout_weight="2"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:textColor="#cccccc">
            </EditText>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:textColor="#ffffff"
                android:text="LOGIN"
                android:textSize="25dp"
                android:background="#4da6ff">

            </Button>

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
             android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
             android:orientation="horizontal"
             android:weightSum="10"
            >

             <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:background="#00000000"
                 android:layout_weight="5"
                 android:paddingLeft="10dp"
                 android:gravity="start">
            </Button>

             <Button
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:background="#00000000"
                 android:text="ID/PASSWORD 찾기"
                 android:layout_weight="5"
                 android:paddingRight="10dp"
                 android:gravity="end">

             </Button>
         </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1.5"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:weightSum="10"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:layout_gravity="start"
                android:src="@drawable/kakao">

            </ImageView>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:text="카카오 계정으로 로그인"
                android:textSize="15dp"
                android:layout_weight="8.4"
                android:background="#ffdd3d">
            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1.5"
            android:layout_marginTop="10dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:weightSum="10"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:layout_gravity="start"
                android:src="@drawable/naver">

            </ImageView>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:text="네이버 아이디로 로그인"
                android:textSize="15dp"
                android:layout_weight="8.4"
                android:background="#00c44b">
            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1.5"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_marginTop="10dp"
            android:weightSum="10"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:layout_gravity="start"
                android:src="@drawable/google">

            </ImageView>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:text="Google 계정으 로그인"
                android:textSize="15dp"
                android:layout_weight="8.4"
                android:background="#ea4740">
            </Button>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>